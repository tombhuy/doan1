@model DataProvider.Model.Author

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section linkpage{
    <li><a href="#">Dashboard</a></li>
    <li class="active"><a href="#">About</a></li>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Author</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
                <label class="control-label mb-1">Author Name</label>  
                <br />  
                @Html.TextBoxFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control", @type = "text" , @name = "cc-payment" }, })
                @Html.TextBoxFor(model => model.AuthorName, new { @type = "text", @class = "form-control" })
                @*<input id="cc-pament" name="cc-payment" type="text" class="form-control" aria-required="true" aria-invalid="false" value="100.00">*@
                @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
                @Html.LabelFor(model => model.DescriptionAuthor, htmlAttributes: new { @class = "control-label mb-1" })
                <br />  
                @Html.TextBoxFor(model => model.DescriptionAuthor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescriptionAuthor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

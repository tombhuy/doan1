@model DataProvider.Model.Book
<div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="row">
                    <div class="col-md-9" >
                        <h3 class="box-title" style="margin-top:8px">Đọc online - Phụ lục chương sách</h3>
                    </div>
                    <div class="col-md-3"  style="text-align:right">
                        <button type="submit" id="btnNewChapter" value ="" onclick="location.href='@Url.Action("Add", "ChapterDetail", new { idbook = Model.BookID })'" class="btn btn-primary">Thêm chương mới</button>
                        <input type="hidden" id="idChapterNew" value="" />
                    </div>
                </div>
                
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="#tablePhuLuc" class="table table-hover dataTable table-bordered">
                            <thead>
                                <tr role="row">
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Tiêu đề chương
                                    </th>
                                    <th width="150px">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="tablePhuLucbody"></tbody>
                        </table>
                    </div>
                </div>
                <div class="row" style="text-align: right">
                    <div class="dataTables_paginate paging_simple_numbers" style="padding-right: 15px">
                        <ul class="pagination" id="phanTrangDocOnline" style="margin-top: -10px;margin-bottom: 0px;"></ul>
                    </div>
                </div>
            </div>
        </div>
</div>